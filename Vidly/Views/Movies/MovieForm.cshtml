@model Vidly.ViewModels.MovieFormViewModel

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @*Html.метод заменяет html теги и ускоряет работу с кодом*@
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @*Html.метод заменяет html теги и ускоряет работу с кодом*@
        @Html.LabelFor(m => m.ReleaseDate)
        @Html.TextBoxFor(m => m.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ReleaseDate)

    </div>
    <div class="form-group">
        @*Html.метод заменяет html теги и ускоряет работу с кодом*@
        @Html.LabelFor(m => m.MovieGenreId)
        @Html.DropDownListFor(m => m.MovieGenreId,
            new SelectList(Model.MovieGenres, "Id", "Name"),
            "Select Genre", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MovieGenreId)

    </div>

    <div class="form-group">
        @*Html.метод заменяет html теги и ускоряет работу с кодом*@
        @Html.LabelFor(m => m.NumberInStock)
        @Html.TextBoxFor(m => m.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NumberInStock)
    </div>

    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}
